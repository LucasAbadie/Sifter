# Unreal Engine binary assets (tracked via Git LFS)
*.uasset filter=lfs diff=lfs merge=lfs -text
*.umap filter=lfs diff=lfs merge=lfs -text
*.ubulk filter=lfs diff=lfs merge=lfs -text
*.ufont filter=lfs diff=lfs merge=lfs -text
*.ushaderprecache filter=lfs diff=lfs merge=lfs -text
*.upipelinecache filter=lfs diff=lfs merge=lfs -text
*.udic filter=lfs diff=lfs merge=lfs -text

# Cached/Derived data (skip tracking if ignored)
*.ddc binary
*.locres binary
*.bak binary

# Text files (allow normal diffs and merges)
*.ini text
*.config text
*.cpp text
*.h text
*.cs text
*.txt text
*.json text
*.xml text
*.csv text
*.usf text
*.ush text

# Force CRLF for Windows line endings (optional, if team is Windows-only)
*.cpp text eol=crlf
*.h text eol=crlf
*.cs text eol=crlf
*.ini text eol=crlf

# Optional: audio, textures, and 3D assets via LFS
*.wav filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.flac filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text
*.fbx filter=lfs diff=lfs merge=lfs -text
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text

# Ignore auto-generated project files
*.opensdf -text
*.sdf -text
*.suo -text
*.VC.db -text
*.VC.opendb -text
